extends layout

block content
  div.container
    div.home.row
      img(src=`${DOMAIN}/images/logo.png`, alt="Pollermo logo")
      h1= title
      p Search or create quick and simple polls

      form(action=`${DOMAIN}/poll` method="get")
        label(for="search") Search for polls
        input.u-full-width(placeholder="write sometings", name="q", type="text", id="search")
        button(type="submit", class="button-primary") Search

      div or
      span
        a(href=`${DOMAIN}/poll/create`, class="bold-link") Create  
      span a poll

